  useEffect(() => {
    // –ü—É—Å—Ç–æ–π useEffect –¥–ª—è —Å–æ–±–ª—é–¥–µ–Ω–∏—è rules of hooks
  }, []);

  if (user?.role !== UserRole.TEAMLEAD && user?.role !== UserRole.ADMIN) {
    return (
